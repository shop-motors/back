generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  String @id
  name String
  email String @unique
  password String
  cpf String @unique
  phone String
  birth_date DateTime
  description String?
  vehicles Vehicles[]
}

model Vehicles{
  id String @id
  brand String
  model String
  year String
  km String
  color String
  fipe_price Int
  price Int
  description String
  cover_img String
  userId String
  user User @relation(fields: [userId], references: [id])
  gallery Gallery[]
}

model Gallery{
  id String @id
  image_url String
  vehicleId String
  vehicle Vehicles @relation(fields: [vehicleId], references: [id])
}
