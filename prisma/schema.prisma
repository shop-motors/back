generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id  String @id 
  name String
  email String @unique
  password String
  reset_token String?
  cpf String @unique
  phone String
  birth_date String
  description String?
  vehicles Vehicles[]
  comments Comment[]

  @@map("users")
}

enum FuelType {
  gasolina
  diesel
  etanol
  flex
}

model Vehicles{
  id String @id @default(uuid())
  brand String
  model String
  year String
  km String
  fuel String
  color String
  fipe_price Int
  price Int
  description String
  cover_img String
  userId String
  user User @relation(fields: [userId], references: [id])
  gallery Gallery[]
  comments Comment[]

  @@map("vehicles")
}

model Comment {
  id        String  @id @default(uuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  vehicleId String
  user      User    @relation(fields: [userId], references: [id])
  vehicle   Vehicles @relation(fields: [vehicleId], references: [id])
  
  @@map("comments")
}

model Gallery{
  id String @id
  image_url String
  vehicleId String
  vehicle Vehicles @relation(fields: [vehicleId], references: [id], onDelete: Cascade)

  @@map("gallery")
}
